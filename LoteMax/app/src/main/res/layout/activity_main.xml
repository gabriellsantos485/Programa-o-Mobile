<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1529A0"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="238dp"
        android:layout_height="84dp"
        android:fontFamily="@font/acme"
        android:shadowColor="#E6CECE"
        android:text="MegaMax"
        android:textColor="#E7DCDC"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="354dp"
        android:layout_height="192dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/umaSequencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:text="Gerar 1 Sequência"
            android:textColor="#0D0B0B"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/duasSequencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="Gerar 2 Sequências"
            android:textColor="#0D0B0B"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/tresSequencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="Gerar 3 Sequências"
            android:textColor="#0D0B0B"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/quatroSequencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="Gerar 4 Sequências"
            android:textColor="#0D0B0B"
            android:textSize="20sp" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/areaDeNumeros"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_marginTop="223dp"
        app:layout_constraintTop_toTopOf="@+id/radioGroup"
        tools:layout_editor_absoluteX="28dp"
        android:orientation="vertical"
        android:gravity="center"

        />

</androidx.constraintlayout.widget.ConstraintLayout>